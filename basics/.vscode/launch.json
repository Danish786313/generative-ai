	"version": "0.2.0",
	"configurations": [

		{
			"type": "node",
			"request": "launch",
			"name": "Currenct files",
			"skipFiles": [
				"<node_internals>/**"
			],
			"program": "${workspaceFolder}\\index.js",
			"runtimeArgs": [
				"-r",
				"ts-node/register"
			],
			"cwd": "${workspaceFolder}",
			"args": [
				"${relativeFile}"
			],
			"envFile": "${workspaceFolder}/.env",
			"console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "sourceMaps": true,
		}
	]
}